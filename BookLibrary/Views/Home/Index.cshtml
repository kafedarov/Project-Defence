<section class="popular-deals section bg-gray">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="section-title">
					<h2>Recently Added</h2>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<div class="trending-ads-slide">

@foreach(Book b in recentlyAdded)
{
	
	<div class="col-sm-12 col-lg-4">
	<div class="product-item bg-light">
	<div class="card">
		<div class="thumb-content">
			@* <a asp-controller="Catalog" asp-action="Details" asp-route-id="@b.Id"> *@
